@model BlueSports.HandleAdmin.ModelViews.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutAccount";
}


<div class="form login">
    <div class="form-content">
        <header>Đăng nhập <a class="title-head" href="/Home">BlueSports</a></header>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="field input-field">
                <input type="email" asp-for="Email" placeholder="Email" class="input">

            </div>

            <div class="field input-field">
                <input type="password" asp-for="Password" placeholder="Mật khẩu" class="password">

                <i class='bx bx-hide eye-icon'></i>
            </div>

            <div class="form-link">
                <a href="#" class="forgot-pass">Quên mật khẩu ?</a>
            </div>

            <div class="field button-field">
                <button>Đăng Nhập</button>
            </div>
        </form>

        <div class="form-link">
            <span>Bạn chưa có tài khoản ? <a href="/Register">Đăng ký !</a></span>
        </div>
    </div>

    <div class="line"></div>

    <div class="media-options">
        <a href="#" class="field facebook">
            <i class='bx bxl-facebook facebook-icon'></i>
            <span>Đăng nhập với Facebook</span>
        </a>
    </div>

    <div class="media-options">
        <a href="#" class="field google">
            <img src="~/lib/google.png" alt="" class="google-img">
            <span>Đăng nhập với Google</span>
        </a>
    </div>
</div>